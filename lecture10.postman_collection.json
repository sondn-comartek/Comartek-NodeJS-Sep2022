			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Register success\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.data.rs.acknowledged).to.eql(true);",
							"});",
							"pm.test(\"duplicate email\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.msg).to.eql(\"email was exist\");",
							"});",
							"pm.test(\"retype password not correct\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.msg).to.eql(\"repeat password incorrect\");",
							"});",
							"pm.test(\"not is email\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.msg).to.eql(\"please input email correct\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
