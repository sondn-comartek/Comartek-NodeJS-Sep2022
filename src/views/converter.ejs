<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Convert</title>
    <script
      src="https://code.jquery.com/jquery-3.6.1.js"
      integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI="
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="root">
      <div>
        <input id="input-kg" type="number" placeholder="kg" /><button
          class="btn btn-convert"
        >
          convert
        </button>
      </div>
      <div>result: <span class="result"></span> lb</div>
    </div>
    <script>
      // console.log($(''));
      $(".btn-convert").on("click", (e) => {
        e.preventDefault();
        let inputKg = $("#input-kg").val();
        fetch("process/convert", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ data: inputKg }),
        })
          .then((res) => res.json())
          .then((data) => {
            $(".result").html(data["result"]);
          })
          .catch((err) => console.log(err));
      });
    </script>
  </body>
</html>
